@model IEnumerable<Category>


<h2>All Categories</h2>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.CategoryId</th>
                <th scope="col">@item.Name</th>
                <th scope="col">
                    <a asp-controller="Category" asp-action="ViewDetails" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success m-3">Add Category</a>
    </tfoot>
</table>